{% extends "base.html.twig" %}

{% block main %}
    <table class="table table-hover table-responsive">
            <thead>
            <tr>
                <th>企业名称</th>
                <th>药品种类数</th>
                <th>联系电话</th>
                <th>邮件</th>
                <th>更新时间</th>
            </tr>
            </thead>
            <tbody>
            {%  for en in  meenterprise %}
                <tr>
                    <td>{{ en.name }}</td>
                    <td>{{ en.chMedicines|length }}</td>
                    <td>{{ en.tele }}</td>
                    <td>{{ en.email }}</td>
                    <td>{{ en.update_time }}</td>
                    <td><a href="{{ path('chmedicine_detail',{id:en.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>
                        <a href="" class="btn btn-default btn-sm">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                            {{ 'action.edit'|trans }}</a>
                        <a href="" class="btn btn-default btn-sm">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                            {{ 'action.delete'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
    </table>
{% endblock %}