{% extends "base.html.twig" %}

{% block content %}
    <table class="table table-hover table-responsive">
        <thead>
        <tr>
            <th>药品名称</th>
            <th>别名</th>
            <th>操  作</th>
        </tr>
        </thead>
        <tbody>
        {%  for medicine in medicines %}
            <tr>
                <td>{{ medicine.mName }}</td>
                <td>{{ medicine.alias }}</td>
                <td><a href="{{ path('medicineedit',{ ('mId'): medicine.mId }) }}" class="btn btn-default btn-sm">编辑</a>
                    <a href="{{ path('medicineremove',{ ('mId'): medicine.mId }) }}" class="btn btn-default btn-sm">删除</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
{% endblock %}